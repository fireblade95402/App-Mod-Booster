@page
@model ExpenseManagement.Pages.Expenses.AddExpenseModel
@{
    ViewData["Title"] = "Add Expense";
}

<div class="form-container">
    <div class="form-header">
        <h1>Create New Expense</h1>
        <a asp-page="Index" class="btn-secondary">‚Üê Back to Expenses</a>
    </div>

    @if (!string.IsNullOrEmpty(Model.ErrorMessage))
    {
        <div class="alert alert-error">
            <svg width="20" height="20" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4m0 4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
            </svg>
            <span>@Model.ErrorMessage</span>
        </div>
    }

    @if (!string.IsNullOrEmpty(Model.SuccessMessage))
    {
        <div class="alert alert-success">
            <svg width="20" height="20" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z" />
            </svg>
            <span>@Model.SuccessMessage</span>
        </div>
    }

    <form method="post" class="expense-form">
        <div class="form-grid">
            <div class="form-group">
                <label asp-for="ExpenseRequest.UserId">User</label>
                <select asp-for="ExpenseRequest.UserId" required>
                    <option value="">Select user...</option>
                    @foreach (var user in Model.Users)
                    {
                        <option value="@user.UserId">@user.FirstName @user.LastName</option>
                    }
                </select>
            </div>

            <div class="form-group">
                <label asp-for="ExpenseRequest.CategoryId">Category</label>
                <select asp-for="ExpenseRequest.CategoryId" required>
                    <option value="">Select category...</option>
                    @foreach (var category in Model.Categories)
                    {
                        <option value="@category.CategoryId">@category.CategoryName</option>
                    }
                </select>
            </div>

            <div class="form-group">
                <label asp-for="ExpenseRequest.ExpenseDate">Expense Date</label>
                <input asp-for="ExpenseRequest.ExpenseDate" type="date" required />
            </div>

            <div class="form-group">
                <label asp-for="ExpenseRequest.Amount">Amount</label>
                <div class="input-with-prefix">
                    <span class="prefix">$</span>
                    <input asp-for="ExpenseRequest.Amount" type="number" step="0.01" min="0" required />
                </div>
            </div>
        </div>

        <div class="form-group">
            <label asp-for="ExpenseRequest.Description">Description</label>
            <textarea asp-for="ExpenseRequest.Description" rows="4" required placeholder="Enter expense description..."></textarea>
        </div>

        <div class="form-group">
            <label asp-for="ExpenseRequest.Receipt">Receipt/Notes</label>
            <textarea asp-for="ExpenseRequest.Receipt" rows="3" placeholder="Additional notes or receipt information..."></textarea>
        </div>

        <div class="form-actions">
            <button type="submit" name="action" value="save" class="btn-secondary">Save as Draft</button>
            <button type="submit" name="action" value="submit" class="btn-primary">Submit for Approval</button>
        </div>
    </form>
</div>
