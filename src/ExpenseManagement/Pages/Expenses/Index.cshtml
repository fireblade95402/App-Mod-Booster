@page
@model ExpenseManagement.Pages.Expenses.IndexModel
@{
    ViewData["Title"] = "Expenses";
}

<div class="expenses-container">
    <div class="header-section">
        <div class="header-content">
            <h1>Expense Management</h1>
            <p class="subtitle">Track and manage your business expenses</p>
        </div>
        <a asp-page="AddExpense" class="btn-primary">+ New Expense</a>
    </div>

    <div class="stats-grid">
        <div class="stat-card">
            <div class="stat-icon blue">
                <svg width="24" height="24" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z" />
                </svg>
            </div>
            <div class="stat-content">
                <p class="stat-label">Total Expenses</p>
                <p class="stat-value">@Model.Expenses.Count</p>
            </div>
        </div>
        
        <div class="stat-card">
            <div class="stat-icon green">
                <svg width="24" height="24" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8c-1.657 0-3 .895-3 2s1.343 2 3 2 3 .895 3 2-1.343 2-3 2m0-8c1.11 0 2.08.402 2.599 1M12 8V7m0 1v8m0 0v1m0-1c-1.11 0-2.08-.402-2.599-1M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
                </svg>
            </div>
            <div class="stat-content">
                <p class="stat-label">Total Amount</p>
                <p class="stat-value">$@Model.Expenses.Sum(e => e.Amount).ToString("N2")</p>
            </div>
        </div>

        <div class="stat-card">
            <div class="stat-icon orange">
                <svg width="24" height="24" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z" />
                </svg>
            </div>
            <div class="stat-content">
                <p class="stat-label">Pending</p>
                <p class="stat-value">@Model.Expenses.Count(e => e.StatusName == "Pending")</p>
            </div>
        </div>

        <div class="stat-card">
            <div class="stat-icon purple">
                <svg width="24" height="24" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z" />
                </svg>
            </div>
            <div class="stat-content">
                <p class="stat-label">Approved</p>
                <p class="stat-value">@Model.Expenses.Count(e => e.StatusName == "Approved")</p>
            </div>
        </div>
    </div>

    <div class="filter-section">
        <form method="get" class="filter-form">
            <div class="filter-group">
                <label for="statusFilter">Status</label>
                <select name="statusFilter" id="statusFilter" onchange="this.form.submit()">
                    <option value="">All Statuses</option>
                    @foreach (var status in Model.Statuses)
                    {
                        <option value="@status.StatusId" selected="@(Model.StatusFilter == status.StatusId)">@status.StatusName</option>
                    }
                </select>
            </div>

            <div class="filter-group">
                <label for="categoryFilter">Category</label>
                <select name="categoryFilter" id="categoryFilter" onchange="this.form.submit()">
                    <option value="">All Categories</option>
                    @foreach (var category in Model.Categories)
                    {
                        <option value="@category.CategoryId" selected="@(Model.CategoryFilter == category.CategoryId)">@category.CategoryName</option>
                    }
                </select>
            </div>

            @if (Model.StatusFilter.HasValue || Model.CategoryFilter.HasValue)
            {
                <a href="/Expenses" class="btn-clear-filter">Clear Filters</a>
            }
        </form>
    </div>

    <div class="expenses-table-container">
        @if (Model.FilteredExpenses.Any())
        {
            <table class="expenses-table">
                <thead>
                    <tr>
                        <th>Date</th>
                        <th>Description</th>
                        <th>Category</th>
                        <th>Amount</th>
                        <th>Status</th>
                        <th>User</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var expense in Model.FilteredExpenses)
                    {
                        <tr>
                            <td>@expense.ExpenseDate.ToString("MMM dd, yyyy")</td>
                            <td>
                                <div class="expense-description">
                                    <strong>@expense.Description</strong>
                                    @if (!string.IsNullOrEmpty(expense.Comments))
                                    {
                                        <small>@expense.Comments</small>
                                    }
                                </div>
                            </td>
                            <td>
                                <span class="category-badge">@expense.CategoryName</span>
                            </td>
                            <td class="amount">$@expense.Amount.ToString("N2")</td>
                            <td>
                                <span class="status-badge status-@expense.StatusName?.ToLower()">
                                    @expense.StatusName
                                </span>
                            </td>
                            <td>@expense.UserName</td>
                            <td>
                                <div class="action-buttons">
                                    <button class="btn-icon" title="View">
                                        <svg width="18" height="18" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z" />
                                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M2.458 12C3.732 7.943 7.523 5 12 5c4.478 0 8.268 2.943 9.542 7-1.274 4.057-5.064 7-9.542 7-4.477 0-8.268-2.943-9.542-7z" />
                                        </svg>
                                    </button>
                                    @if (expense.StatusName == "Draft")
                                    {
                                        <button class="btn-icon" title="Edit">
                                            <svg width="18" height="18" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z" />
                                            </svg>
                                        </button>
                                    }
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        }
        else
        {
            <div class="empty-state">
                <svg width="64" height="64" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z" />
                </svg>
                <h3>No expenses found</h3>
                <p>Get started by creating your first expense</p>
                <a asp-page="AddExpense" class="btn-primary">+ Create Expense</a>
            </div>
        }
    </div>
</div>
